{
  "manifest_version": 3,
  "name": "StopTurbo Twitch",
  "version": "1.0",
  "description": "Automatically clicks a button when it appears (based on XPath).",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
